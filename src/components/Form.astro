  /* Mobile Optimization */
    @media (max-width: 768px) {
        .form-container {
           max-width: 100%;
            padding: 15px; 
            border-radius: 0; /* Remove rounded corners for a clean look */
        }

        .form-section {
            padding: 30px 15px; /* Reduce padding */
        }

        input,
        textarea {
            font-size: var(--font-size-xs-mobile); /* Adjust font size for mobile */
            padding: 8px; /* Reduce padding for better spacing */
        }

        label {
            font-size: var(--font-size-sm); /* Adjust label font size */
        }
    }



